{
    "extends": [
        "eslint:recommended",
        "plugin:import/errors",
        "plugin:react/recommended",
        "plugin:jsx-a11y/recommended",
        "prettier",
        "prettier/react"
    ],
    "rules": {
        "react/prop-types": 0,
        "no-console": 1,
        "react/no-unescaped-entities": 0,
        "react/static-property-placement": 0,
        "no-unused-vars": "off",
        "no-undef": "off",
        "react/jsx-key": 1,
        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": "error"

    },
    "globals": {
        "UniversalDashboard": true,
        "react-interval": true
    },
    "plugins": [
        "import",
        "react",
        "react-hooks"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "objectLiteralShorthandProperties": true,
            "modules": true,
            "destructuring": true,
            "experimentalObjectRestSpread": true
        }
    },
    "settings": {
        "react": {
            "pragma": "React",
            "version": "detect"
        }
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    }
}